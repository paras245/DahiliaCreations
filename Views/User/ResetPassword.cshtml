@{
    ViewData["Title"] = "Reset Password";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Dahilia Creations</title>
    <link rel="stylesheet" href="~/css/auth.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />
</head>
<body>
    <video autoplay muted loop id="bgVideo">
        <source src="~/images/nemo-fis-wallpaper.mov" type="video/mp4">
        Your browser does not support HTML5 video.
    </video>
    <div class="auth-container">
        <div class="auth-card">
            <div style="text-align: center; margin-bottom: 20px;">
                <i class="fas fa-shield-alt" style="font-size: 3rem; color: rgba(76, 175, 80, 0.8);"></i>
            </div>
            
            <h2>Reset Password</h2>
            <p class="subtitle">Create a new password for your account</p>

            <form asp-action="ResetPassword" method="post" id="resetPasswordForm">
                @Html.AntiForgeryToken()
                <input type="hidden" name="token" value="@Context.Request.Query["token"]" />
                
                <div class="form-group">
                    <label for="newPassword">New Password</label>
                    <div class="input-with-icon">
                        <input type="password" 
                               class="form-control" 
                               id="newPassword" 
                               name="newPassword" 
                               placeholder="Enter new password" 
                               required 
                               autocomplete="new-password" />
                        <i class="fas fa-eye toggle-password" data-target="#newPassword" style="cursor: pointer;"></i>
                    </div>
                    <div class="password-strength">
                        <div class="password-strength-bar" id="strengthBar"></div>
                    </div>
                </div>

                <div class="form-group">
                    <label for="confirmPassword">Confirm New Password</label>
                    <div class="input-with-icon">
                        <input type="password" 
                               class="form-control" 
                               id="confirmPassword" 
                               name="confirmPassword"
                               placeholder="Confirm new password" 
                               required 
                               autocomplete="new-password" />
                        <i class="fas fa-eye toggle-password" data-target="#confirmPassword" style="cursor: pointer;"></i>
                    </div>
                    <span id="passwordMatchError" class="text-danger" style="display: none; font-size: 0.85rem; color: #ef9a9a;">Passwords do not match</span>
                </div>

                <div style="background: rgba(138, 180, 248, 0.1); border-left: 4px solid rgba(138, 180, 248, 0.8); padding: 12px; border-radius: 8px; margin-bottom: 20px;">
                    <p style="margin: 0; font-size: 0.85rem; color: rgba(255, 255, 255, 0.8);">
                        <i class="fas fa-info-circle" style="margin-right: 8px;"></i>
                        Password should be at least 8 characters long and include uppercase, lowercase, numbers, and special characters.
                    </p>
                </div>

                <button type="submit" class="btn-auth" id="submitBtn">
                    Reset Password
                </button>

                <div class="auth-footer">
                    Remember your password? <a href="@Url.Action("Login", "User")">Back to Login</a>
                </div>
            </form>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <script>
        $(document).ready(function() {
            // Toastr configuration
            toastr.options = {
                "closeButton": true,
                "progressBar": true,
                "positionClass": "toast-top-right",
                "timeOut": "5000"
            };

            @if (TempData["ToastrMessage"] != null)
            {
                var type = TempData["ToastrType"]?.ToString() ?? "info";
                var message = TempData["ToastrMessage"]?.ToString();
                <text>
                    toastr["@type"](@Html.Raw(Json.Serialize(message)));
                </text>
            }

            // Password Toggle
            $('.toggle-password').on('click', function() {
                const targetId = $(this).data('target');
                const input = $(targetId);
                const icon = $(this);

                if (input.attr('type') === 'password') {
                    input.attr('type', 'text');
                    icon.removeClass('fa-eye').addClass('fa-eye-slash');
                } else {
                    input.attr('type', 'password');
                    icon.removeClass('fa-eye-slash').addClass('fa-eye');
                }
            });

            // Password strength checker
            $('#newPassword').on('input', function() {
                const password = $(this).val();
                const strengthBar = $('#strengthBar');
                let strength = 0;

                if (password.length >= 8) strength++;
                if (password.match(/[a-z]+/)) strength++;
                if (password.match(/[A-Z]+/)) strength++;
                if (password.match(/[0-9]+/)) strength++;
                if (password.match(/[$@@#&!]+/)) strength++;

                strengthBar.removeClass('weak medium strong');
                
                if (strength <= 2) {
                    strengthBar.addClass('weak');
                } else if (strength <= 4) {
                    strengthBar.addClass('medium');
                } else {
                    strengthBar.addClass('strong');
                }
            });

            // Password match validation
            function checkPasswordMatch() {
                const password = $('#newPassword').val();
                const confirmPassword = $('#confirmPassword').val();
                const errorSpan = $('#passwordMatchError');
                const submitBtn = $('#submitBtn');

                if (confirmPassword.length > 0) {
                    if (password !== confirmPassword) {
                        errorSpan.show();
                        submitBtn.prop('disabled', true);
                        submitBtn.css('opacity', '0.5');
                    } else {
                        errorSpan.hide();
                        submitBtn.prop('disabled', false);
                        submitBtn.css('opacity', '1');
                    }
                }
            }

            $('#newPassword, #confirmPassword').on('input', checkPasswordMatch);

            // Form submission with loading state
            $('#resetPasswordForm').on('submit', function(e) {
                const password = $('#newPassword').val();
                const confirmPassword = $('#confirmPassword').val();

                if (password !== confirmPassword) {
                    e.preventDefault();
                    toastr.error('Passwords do not match');
                    return false;
                }

                if (password.length < 8) {
                    e.preventDefault();
                    toastr.warning('Password should be at least 8 characters long');
                    return false;
                }

                const submitBtn = $(this).find('button[type="submit"]');
                submitBtn.addClass('loading');
                submitBtn.text('Resetting...');
            });

            // Input focus animations
            $('.form-control').on('focus', function() {
                $(this).closest('.form-group').find('label').css('color', 'rgba(138, 180, 248, 0.9)');
            });

            $('.form-control').on('blur', function() {
                $(this).closest('.form-group').find('label').css('color', 'rgba(255, 255, 255, 0.9)');
            });
        });
    </script>
</body>
</html>
