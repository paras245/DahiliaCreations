@model Fish

@{
    ViewData["Title"] = "Delete Fish";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-5">

            <div class="card shadow-lg border-0 rounded-4 text-center overflow-hidden">
                <div class="card-header bg-danger text-white py-3">
                    <h4 class="mb-0"><i class="fas fa-exclamation-triangle"></i> Delete Fish</h4>
                </div>

                <div class="card-body p-4">
                    <div class="mb-4">
                        <img src="@(string.IsNullOrEmpty(Model.ImagePath) ? "/images/no-image.png" : Model.ImagePath)" 
                             class="rounded-circle shadow-sm" 
                             style="width: 120px; height: 120px; object-fit: cover; border: 4px solid #fff;" />
                    </div>

                    <h3 class="fw-bold text-dark">@Model.FishName</h3>
                    <p class="text-muted mb-4">Are you sure you want to remove this fish from the collection? This action cannot be undone.</p>

                    <div class="d-flex justify-content-center gap-3">
                        <a asp-action="Index" class="btn btn-outline-secondary px-4 rounded-pill">
                            Cancel
                        </a>
                        
                        <form asp-action="Delete">
                            <input type="hidden" asp-for="Id" />
                            <button type="submit" class="btn btn-danger px-4 rounded-pill">
                                <i class="fas fa-trash-alt"></i> Delete Permanently
                            </button>
                        </form>
                    </div>
                </div>
                
                <div class="card-footer bg-light text-muted small">
                    Fish ID: @Model.Id
                </div>
            </div>

        </div>
    </div>
</div>
