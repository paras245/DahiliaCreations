@{
    ViewData["Title"] = "Forgot Password";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Dahilia Creations</title>
    <link rel="stylesheet" href="~/css/auth.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />
</head>
<body>
    <video autoplay muted loop id="bgVideo">
        <source src="~/images/nemo-fis-wallpaper.mov" type="video/mp4">
        Your browser does not support HTML5 video.
    </video>
    <div class="auth-container">
        <div class="auth-card">
            <div style="text-align: center; margin-bottom: 20px;">
                <i class="fas fa-key" style="font-size: 3rem; color: rgba(138, 180, 248, 0.8);"></i>
            </div>
            
            <h2>Forgot Password?</h2>
            <p class="subtitle">No worries! Enter your email and we'll send you reset instructions</p>

            <form asp-action="ForgotPassword" method="post" id="forgotPasswordForm">
                @Html.AntiForgeryToken()
                
                <div class="form-group">
                    <label for="email">Email Address</label>
                    <div class="input-with-icon">
                        <input type="email" 
                               class="form-control" 
                               id="email" 
                               name="email" 
                               placeholder="Enter your email address" 
                               required 
                               autocomplete="email" />
                        <i class="fas fa-envelope"></i>
                    </div>
                </div>

                @if (TempData["ResetLink"] != null)
                {
                    <div style="background: rgba(76, 175, 80, 0.15); border: 1px solid rgba(76, 175, 80, 0.4); border-radius: 12px; padding: 15px; margin-bottom: 20px;">
                        <p style="margin: 0 0 10px 0; color: #a5d6a7; font-weight: 600;">
                            <i class="fas fa-check-circle"></i> Reset Link Generated (For Testing)
                        </p>
                        <p style="margin: 0; font-size: 0.85rem; color: rgba(255, 255, 255, 0.8); word-break: break-all;">
                            <a href="@TempData["ResetLink"]" style="color: #8ab4f8; text-decoration: underline;">
                                @TempData["ResetLink"]
                            </a>
                        </p>
                        <p style="margin: 10px 0 0 0; font-size: 0.8rem; color: rgba(255, 255, 255, 0.6);">
                            <i class="fas fa-info-circle"></i> In production, this link would be sent to your email.
                        </p>
                    </div>
                }

                <button type="submit" class="btn-auth">
                    Send Reset Link
                </button>

                <div class="auth-footer">
                    Remember your password? <a href="@Url.Action("Login", "User")">Back to Login</a>
                </div>
            </form>

            <div class="auth-divider">
                <span>OR</span>
            </div>

            <div style="text-align: center;">
                <a href="@Url.Action("Register", "User")" class="auth-link">Create a new account</a>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <script>
        $(document).ready(function () {

            toastr.options = {
                closeButton: true,
                progressBar: true,
                positionClass: "toast-top-right",
                timeOut: "5000"
            };

            @if (TempData["ToastrMessage"] != null)
            {
                var type = TempData["ToastrType"]?.ToString() ?? "info";
                var message = TempData["ToastrMessage"]?.ToString();
                <text>
                    toastr["@type"](@Html.Raw(Json.Serialize(message)));
                </text>
            }

            // Form submission with loading state
            $('#forgotPasswordForm').on('submit', function () {
                const submitBtn = $(this).find('button[type="submit"]');
                submitBtn.addClass('loading');
                submitBtn.text('Sending...');
            });

        });
    </script>


</body>
</html>
